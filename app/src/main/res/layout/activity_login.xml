<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".Login"
              android:orientation="vertical"
              android:gravity="center_horizontal"

              android:backgroundTintMode="src_over">

    <Button
            android:text="Main Page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/main_nav"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/login"
            android:layout_marginTop="50dp"
    />

    <EditText
            android:id="@+id/un_log"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:drawableLeft="@mipmap/username"


            android:layout_marginTop="35dp"
            android:hint="username" />

    <EditText
            android:id="@+id/pw_log"
            android:layout_width="152dp"
            android:layout_height="45dp"
            android:drawableLeft="@mipmap/password"

            android:layout_marginTop="20dp"
            android:hint="password" />

    <Button
            android:id="@+id/login_log"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="Login" />

    <Button
            android:id="@+id/reg_log"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="Register"
            android:textColorHighlight="#00470707" />



</LinearLayout>